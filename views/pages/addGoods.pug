extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post",action="/goods/new")
                .form-group
                    label.col-sm-2.control-label(for="inputTitle") 商品名称
                    .col-sm-7
                        input#inputTitle.form-control(type="text", name="goods[productName]")
                .form-group
                    label.col-sm-2.control-label(for="inputDoctor") 商品价格
                    .col-sm-7
                        input#inputDoctor.form-control(type="text", name="goods[salePrice]")
                .form-group
                    label.col-sm-2.control-label(for="inputCountry") 商品图片地址
                    .col-sm-7
                        input#inputCountry.form-control(type="text",name="goods[productImage]")
                .form-group
                    .col-sm-offset-3.col-sm-9
                        button.btn.btn-default(type="submit") 录入